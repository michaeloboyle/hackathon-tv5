# Embedding Service Configuration

# Provider: "openai" or "local"
EMBEDDING_PROVIDER=openai

# Model: "small" (768 dims) or "large" (1536 dims)
EMBEDDING_MODEL=small

# OpenAI API Key (required if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=sk-...

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=postgresql://localhost/media_gateway

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# Discovery Service
DISCOVERY__SERVER__HOST=0.0.0.0
DISCOVERY__SERVER__PORT=8081

# Cache TTL Settings (seconds)
DISCOVERY__CACHE__SEARCH_TTL_SEC=1800
DISCOVERY__CACHE__EMBEDDING_TTL_SEC=86400
DISCOVERY__CACHE__INTENT_TTL_SEC=600
